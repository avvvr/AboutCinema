<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Ненавязчивая кнопочка-->
    <Style x:Key="_LogP_UnobtrusiveButton" TargetType="Button">
        <Setter Property="Height" Value="22" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            CornerRadius="12"
                            BorderThickness="0.5"
                            Background="#FFE6E6E8">
                        <ContentPresenter Name="content"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="#DCDBDB"/>
                            <Setter TargetName="border" Property="RenderTransform" >
                                <Setter.Value>
                                    <TranslateTransform Y="-1.5" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
            </Setter>
    </Style>
    
    <!--textbox закругленные-->
    <Style x:Key="_LogP_TextBox" TargetType="TextBox">
        <Setter Property="Height" Value="23" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="AllowDrop" Value="true" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBoxBase}">
                    <Border x:Name="border"
                            CornerRadius="12"
                            Padding="4"
                            BorderThickness="0.5"
                            Background="White"
                            BorderBrush="#FFE6E6E8">
                        <ScrollViewer Margin="0"
                        x:Name="PART_ContentHost" />
                        <!--если убрать scrollviewer, нельзя будет ввести ничего-->
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="RenderTransform" >
                                <Setter.Value>
                                    <TranslateTransform Y="-1.5" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--passwordbox закругленные-->
    <Style x:Key="_LogP_PasswordBox" TargetType="PasswordBox">
        <Setter Property="Height" Value="23" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="AllowDrop" Value="true" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border x:Name="border"
                            CornerRadius="12"
                            Padding="4"
                            BorderThickness="0.5"
                            Background="White"
                            BorderBrush="#FFE6E6E8">
                        <ScrollViewer Margin="0"
                        x:Name="PART_ContentHost" />
                        <!--если убрать scrollviewer, нельзя будет ввести ничего-->
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="RenderTransform" >
                                <Setter.Value>
                                    <TranslateTransform Y="-1.5" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
