                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Text="Аниме" Height="25"/>
                <ListBox  ItemsSource="{Binding AnimeMovies}" BorderBrush="Black" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate >
                        <DataTemplate>
                            <Button Height="300" Width="200" Margin="5">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding MoviePic}"/>
                                </Button.Background>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Text="Лауреты и номинанты &quot;Оскара&quot;" Height="25"/>
                <ListBox  ItemsSource="{Binding OscarMovies}" BorderBrush="Black" Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
