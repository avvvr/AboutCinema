                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Text="Кино про эпидемии" 
                           Style="{DynamicResource _FilmTitleInLists}"/>
                <ListBox  ItemsSource="{Binding AboutEpidemicsMovies}" 
                          Style="{DynamicResource _FilmsListBox}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate >
                        <DataTemplate>
                            <Button Style="{DynamicResource _OpenFilmButton}">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding MoviePic}"/>
                                </Button.Background>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock Text="Литература в кино" 
                           Style="{DynamicResource _FilmTitleInLists}"/>
                <ListBox  ItemsSource="{Binding LiteratureInMovies}" 
                          Style="{DynamicResource _FilmsListBox}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate >
                        <DataTemplate>
                            <Button Style="{DynamicResource _OpenFilmButton}">
                                <Button.Background>
                                    <ImageBrush ImageSource="{Binding MoviePic}"/>
                                </Button.Background>
                            </Button>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
